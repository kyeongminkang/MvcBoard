
@model PaginatedList<MvcBoardApp.Models.Board>


@using MvcBoardApp.ViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-pageNumber="@Model.PageIndex">Create New</a>
</p>

<form asp-controller="Boards" asp-action="Index", method="get">
    <p>
        Subject : <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Filter" /> |
        <a asp-action="Index">Back to Full List</a>

    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.board.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.board.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.board.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.board.WriteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.board.CommentCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WriteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentCount)
                </td>
                <td>
                   
                    <a asp-action="Edit" asp-for="@item.UserName" asp-route-id="@item.Id" asp-route-pageNumber="@Model.PageIndex">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" asp-route-pageNumber="@Model.PageIndex">Details</a> |
                    <a asp-action="Delete" asp-for="@item.UserName" asp-route-id="@item.Id" asp-route-pageNumber="@Model.PageIndex">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}


<div>
    <ul class="pagination">
        @if (Model.PageIndex > 1)
        {
            <li class="page-item">
                <a asp-action="Index" asp-route-pageNumber="1" class="btn btn-default">
                    First
                </a>
            </li>
            <li class="page-item">
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @prevDisabled">
                    Previous
                </a>
            </li>
        }
        @for (var i = Model.startPage; i <= Model.endPage; i++)
        {
             <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a asp-route-pageNumber="@i" class="page-link" asp-action="Index" asp-route-currentFilter="@ViewData["CurrentFilter"]">@i</a>
            </li>
        }
        @if (Model.PageIndex < Model.TotalPages)
        {
            <li class="page-item">
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @nextDisabled">
                    Next
                </a>
            </li>
            <li class="page-item">
                <a asp-action="Index" asp-route-pageNumber="@Model.TotalPages" class="btn btn-default">
                    Last
                </a>
            </li>
        }
    </ul>
</div>



