@model MvcBoardApp.ViewModels.BoardViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Edit";
}
@if (User.Identity.Name == Model.Board.UserName)
{
    <h1>Edit</h1>

    <h4>Board</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Board.ID" />
                    <label asp-for="Board.UserName" class="control-label" >@Model.Board.UserName</label>
                    <input asp-for="Board.UserName" class="form-control" type="hidden" value="@Model.Board.UserName" />
                    <span asp-validation-for="Board.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Board.Subject" class="control-label"></label>
                    <input asp-for="Board.Subject" class="form-control" />
                    <span asp-validation-for="Board.Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Board.Content" class="control-label"></label>
                    <input asp-for="Board.Content" class="form-control" />
                    <span asp-validation-for="Board.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Board.WriteDate" class="form-control" type="hidden" value="@DateTime.Now" />
                    <span asp-validation-for="Board.WriteDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" asp-route-id="@Model.Board.ID" asp-route-pageNumber="@Model.PageIndex" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index" asp-route-pageNumber="@Model.PageIndex">Back to List</a>
    </div>
}
else if (SignInManager.IsSignedIn(User))
{
    <a asp-action="Index" asp-route-pageNumber="@Model.PageIndex">권한이 없습니다. 이전으로 돌아가기</a>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login">로그인이 필요합니다.</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
