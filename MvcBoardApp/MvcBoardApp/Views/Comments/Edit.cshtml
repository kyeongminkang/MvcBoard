@*@model MvcBoardApp.Models.Comment*@
@model MvcBoardApp.ViewModels.Page
@using MvcBoardApp.ViewModels;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Edit";
}
@if (User.Identity.Name == Model.comment.CommentUserName)
{
    <h1>Edit</h1>

    <h4>Comment</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="comment.Id" />
                <input type="hidden" asp-for="comment.BoardId" />
                <div class="form-group">
                    <label asp-for="comment.CommentUserName" class="control-label"></label>
                    <input asp-for="comment.CommentUserName" class="form-control" type="hidden" value="@Model.comment.CommentUserName" />
                    <span asp-validation-for="comment.CommentUserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="comment.CommentContent" class="control-label"></label>
                    <input asp-for="comment.CommentContent" class="form-control" />
                    <span asp-validation-for="comment.CommentContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" asp-route-id="@Model.comment.Id" asp-route-PageNumber="@Model.PageIndex" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-controller="Boards" asp-action="Details" asp-route-id="@Model.comment.BoardId" asp-route-PageNumber="@Model.PageIndex">Back to List</a>
    </div>
}
else if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Boards" asp-action="Details" asp-route-id="@Model.comment.BoardId" asp-route-PageNumber="@Model.PageIndex">권한이 없습니다. 이전으로 돌아가기</a>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login">로그인이 필요합니다.</a>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
